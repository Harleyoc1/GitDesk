<?xml version="1.0" encoding="UTF-8"?>

<?import com.harleyoconnor.gitdesk.ui.node.SVGIcon?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.harleyoconnor.gitdesk.ui.repository.issues.IssuesTabController" styleClass="issues-tab">
    <VBox fx:id="sideBar" styleClass="side-bar">
        <HBox alignment="CENTER_LEFT" minHeight="20" styleClass="tool-bar">
            <Label fx:id="titleLabel" styleClass="text, body"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button onAction="#create" styleClass="icon-button, no-padding">
                <graphic>
                    <SVGIcon prefWidth="12" prefHeight="12" path="/ui/icons/add.svg" styleClass="icon"/>
                </graphic>
            </Button>
        </HBox>
        <!-- IssueList programmatically inserted here. -->
    </VBox>
    <VBox fx:id="issueBox"/>
</SplitPane>
