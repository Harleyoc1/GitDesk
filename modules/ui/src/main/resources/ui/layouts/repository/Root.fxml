<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.harleyoconnor.gitdesk.ui.repository.RepositoryController" fx:id="root">
    <center>
        <SplitPane fx:id="centre" dividerPositions="0.15">
            <ScrollPane fx:id="fileList" minWidth="150" fitToWidth="true" styleClass="side-bar"/>
            <VBox alignment="CENTER">
                <Label text="%ui.repository.no_file_open" styleClass="text, body"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>