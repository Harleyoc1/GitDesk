<?xml version="1.0" encoding="UTF-8"?>

<?import com.harleyoconnor.gitdesk.ui.node.SVGIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.harleyoconnor.gitdesk.ui.repository.issues.IssueViewController">
    <HBox prefHeight="20" styleClass="tool-bar">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="toggleStateButton" onAction="#toggleState" styleClass="icon-button, no-padding"/>
        <Button onAction="#pin" styleClass="icon-button, no-padding">
            <graphic>
                <SVGIcon prefWidth="12" prefHeight="12" path="/ui/icons/pin.svg" styleClass="icon"/>
            </graphic>
            <tooltip>
                <Tooltip text="%ui.button.pin"/>
            </tooltip>
        </Button>
        <Button onAction="#delete" styleClass="icon-button, no-padding">
            <graphic>
                <SVGIcon prefWidth="12" prefHeight="12" path="/ui/icons/bin.svg" styleClass="icon"/>
            </graphic>
            <tooltip>
                <Tooltip text="%ui.button.delete"/>
            </tooltip>
        </Button>
    </HBox>
    <HBox spacing="8" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets top="10" right="12" left="12"/>
        </VBox.margin>
        <Label fx:id="titleLabel" styleClass="text, title"/>
        <Label fx:id="numberLabel" styleClass="secondary-text, title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="%ui.repository.tab.issues.view.assigned_to" styleClass="secondary-text, body"/>
        <Circle fx:id="assigneeAvatar" styleClass="bordered" radius="12"/>
        <HBox fx:id="stateBox" styleClass="issue-state-box" alignment="CENTER" spacing="5">
            <SVGIcon fx:id="stateIcon" prefWidth="12" prefHeight="12" path="/ui/icons/issue.svg"
                     styleClass="icon, no-padding"/>
            <Label fx:id="stateLabel" styleClass="text, body"/>
        </HBox>
    </HBox>
    <HBox spacing="8">
        <VBox.margin>
            <Insets top="6" right="12" left="12"/>
        </VBox.margin>
        <Label fx:id="subHeadingLabel" styleClass="secondary-text, body"/>
        <Region HBox.hgrow="ALWAYS"/>
        <ScrollPane fitToHeight="true">
            <HBox fx:id="labelsBox" spacing="5"/>
        </ScrollPane>
    </HBox>
    <ScrollPane fitToWidth="true" fx:id="timelineScrollPane">
        <VBox.margin>
            <Insets top="4" bottom="10"/>
        </VBox.margin>
        <VBox fx:id="timelineBox" styleClass="timeline" spacing="8">
            <padding>
                <Insets right="12" left="12"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
