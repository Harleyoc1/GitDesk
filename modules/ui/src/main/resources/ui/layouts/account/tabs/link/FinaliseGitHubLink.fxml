<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.harleyoconnor.gitdesk.ui.account.link.FinaliseGitHubLinkController" onKeyPressed="#keyPressed"
      spacing="8">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <Label text="%ui.account.tab.link_github.confirm_on_website.heading" styleClass="text, heading-3"/>
    <Label text="%ui.account.tab.link_github.confirm_on_website.description" styleClass="text, body" wrapText="true"/>
    <Region VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <VBox.margin>
            <Insets bottom="5"/>
        </VBox.margin>
        <Button onAction="#cancel" text="%ui.button.cancel"/>
        <Button fx:id="doneButton" onAction="#done" text="%ui.button.done" styleClass="enter-button"/>
    </HBox>
</VBox>
