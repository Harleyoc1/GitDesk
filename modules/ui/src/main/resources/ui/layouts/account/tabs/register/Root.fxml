<?xml version="1.0" encoding="UTF-8"?>

<?import com.harleyoconnor.gitdesk.ui.node.PasswordField?>
<?import com.harleyoconnor.gitdesk.ui.node.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.harleyoconnor.gitdesk.ui.account.RegisterController" onKeyPressed="#keyPressed"
      spacing="8">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <TextField fx:id="usernameField" labelText="%ui.account.tab.register.field.username.label" prefHeight="35"
               validation="Length [4,64]" styleClass="field"/>
    <TextField fx:id="emailField" labelText="%ui.account.tab.register.field.email.label" prefHeight="35"
               validation="Length [0,128]; Email" styleClass="field"/>
    <PasswordField fx:id="passwordField" labelText="%ui.account.tab.register.field.password.label" prefHeight="35"
                   validation="Length [12,64]" styleClass="field"/>
    <PasswordField fx:id="confirmPasswordField" labelText="%ui.account.tab.register.field.confirm_password.label"
                   prefHeight="35" styleClass="field"/>
    <Region VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <VBox.margin>
            <Insets bottom="5"/>
        </VBox.margin>
        <Button onAction="#clear" text="%ui.button.clear"/>
        <Button fx:id="createButton" onAction="#register" text="%ui.button.register" styleClass="enter-button"/>
    </HBox>
</VBox>
